{
  "name": "redux-event",
  "version": "1.0.0",
  "description": "Compose and react upon redux actions",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "rimraf dist/**/__tests__",
    "clean": "rimraf dist",
    "test": "jest src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/redux-event.git"
  },
  "keywords": [
    "redux",
    "events"
  ],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/redux-event/issues"
  },
  "homepage": "https://github.com/johngeorgewright/redux-event#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.0.9",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "redux": ">=4.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
